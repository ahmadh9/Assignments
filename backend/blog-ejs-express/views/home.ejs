<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="UTF-8">
  <title>my blog</title>
  <link rel="stylesheet" href="/styles/style.css">
</head>
<body>

  <h1>My Blog</h1>
  <p><%= intro %></p>

  <a href="/new" class="button">new article</a>

  <hr>

  <% if (posts.length === 0) { %>
    <p>No articles yet! , be the first one to write</p>
  <% } else { %>
    <% posts.forEach(post => { %>
      <div class="post">
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <a href="/edit/<%= post.id %>" class="button">Edit</a>
        <form action="/delete/<%= post.id %>" method="POST" style="display:inline">
          <button type="submit" class="button" style="background:#cc0000">Delete</button>
        </form>
      </div>
    <% }); %>
  <% } %>

</body>
</html>
